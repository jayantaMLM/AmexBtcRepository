@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>AMEXBTC: About Us</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- global stylesheet -->
    <link href="~/SiteAssets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/SiteAssets/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/SiteAssets/css/icommon.css" rel="stylesheet" type="text/css">
    <link href="~/SiteAssets/css/menu.css" rel="stylesheet" type="text/css">
    <link href="~/SiteAssets/css/style.css" rel="stylesheet" type="text/css">

    <script type="text/javascript" src="~/SiteAssets/js/jquery-2.2.4.min.js"></script>
    <script type="text/javascript" src="~/SiteAssets/js/bootstrap.min.js"></script>
    <script src="~/SiteAssets/js/jquery-latest.min.js"></script>
    <script src="~/SiteAssets/js/script.js"></script>

    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
    <script src="~/app/scripts/RegistrationController.js"></script>

    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>
    <!-- header part -->
    <header class="bg-inner">
        <!-- logo/meu part -->
        <div class="container">
            <div class="logo-pt">
                <div class="row">
                    <div class="col-sm-4 col-md-4">
                        <h1><span>AMEX</span>BTC</h1>
                    </div>
                    <div class="col-sm-8 col-md-8">
                        <!--menu main-->
                        <div id='cssmenu'>
                            <ul>
                                <li><a href='@Url.Action("Index","Home")'>Home</a></li>
                                <li><a href='@Url.Action("AboutUs","Home")'>About Us</a></li>
                                <li><a href='@Url.Action("Opportunity","Home")'>Opportunity</a></li>
                                <li><a href='@Url.Action("ContactUs","Home")'>Contact Us</a></li>
                                <li><a href='@Url.Action("Registration","Home")'>Registration</a></li>
                                <li><a href='@Url.Action("Login","Home")'>Login</a></li>
                            </ul>
                        </div>
                        <!--end menu main-->
                    </div>
                </div>
            </div>
        </div>
        <!-- heading part -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <h3>Referrer Details</h3>
                </div>
            </div>
        </div>
    </header>

    <!-- welcome part -->
    <section class="welcome-pt">
        <div class="container"   ng-app="app" ng-controller="Register">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-sm-offset-4 col-md-offset-4">
                    <div class="registration">
                        <div class="row">
                            <form name="Registration">
                                <div>
                                    <div class="user-login-info" ng-show="!isComplete && !isRegistered" style="margin-bottom:0px;text-align:left;font-size:13px">
                                        <div class="col-md-12" id="referrerdiv">
                                            <md-input-container style="width:100%;margin:10px">
                                                <label>Sponsor name</label>
                                                <input name="ReferrerName" id="referrername" ng-model="ReferrerName" ng-change="validation1()" ng-blur="checkReferrername()" ng-required="true" />
                                                <div class="errorcls">{{errorModel.ReferrerName}}</div>
                                            </md-input-container>
                                        </div>
                                        <div class="col-md-12">
                                            <md-input-container style="width:100%;margin:10px">
                                                <label>Member name</label>
                                                <input name="Fullname" ng-model="registerModel.FullName" ng-required="true" ng-change="validation2()" />  @*ng-pattern="/^[a-zA-Z ]*$/"*@
                                                <div class="errorcls">{{errorModel.FullName}}</div>
                                            </md-input-container>
                                        </div>
                                        <div class="col-md-12">
                                            <md-input-container style="width:100%;margin:10px">
                                                <label>Email Id</label>
                                                <input type="email" name="Email" ng-model="registerModel.EmailId" ng-required="true" ng-change="validation3()" ng-blur="checkEmailId()" />
                                                <div class="errorcls">{{errorModel.EmailId}}</div>
                                            </md-input-container>
                                        </div>
                                        <div class="col-md-12">
                                            <md-input-container style="width:100%;margin:10px">
                                                <label>Unique Username</label>
                                                <input name="Username" ng-model="registerModel.UserName" ng-keyup="validation4()" ng-blur="checkUsername()" ng-pattern="/^[A-Za-z0-9]*$/" ng-minlength="6" ng-maxlength="30" ng-required="true" />
                                                <div class="errorcls">{{errorModel.UserName}}</div>
                                            </md-input-container>
                                        </div>
                                        <div class="col-md-6">
                                            <md-input-container style="margin:10px">
                                                <label>Password</label>
                                                <input type="password" name="Password" ng-model="registerModel.Password" ng-change="validation5()" ng-pattern="/^[A-Za-z0-9]*$/" ng-minlength="6" ng-maxlength="14" ng-required="true" />
                                                <div class="errorcls">{{errorModel.Password}}</div>
                                            </md-input-container>
                                        </div>
                                        <div class="col-md-6">
                                            <md-input-container style="margin:10px">
                                                <label>ReType Password</label>
                                                <input type="password" name="Password2" ng-model="registerModel.ConfirmPassword" ng-change="validation6()" ng-required="true" />
                                                <div class="errorcls">{{errorModel.ConfirmPassword}}</div>
                                            </md-input-container>
                                        </div>
                                    </div>
                                </div>

                                <div style="text-align:center">

                                    <input type="button" value="PROCEED" class="btn btn-info" ng-disabled="Registration.$invalid || errorModel.ReferrerName!='' || errorModel.UserName!=''" ng-click="showSubmit=true;register()" style="height:35px;width:30%;margin-bottom:30px;" ng-show="!isComplete && !isRegistered" />
                                </div>

                                <div style="width:100%;background:skyblue;text-align:center" ng-show="isComplete && !isRegistered">
                                    <br />
                                    <div class="pull-left" style="margin-left:20px;cursor:pointer"><i class="fa fa-arrow-circle-o-left" title="Previous page" ng-click="isComplete=false"></i></div><span style="color:blue;padding:5px;font-size:16px">Terms &amp; Conditions</span><span><i class="fa fa-exclamation-circle" style="margin-left:5px;color:#e20824" title="Terms and Conditions must be accepted"></i></span> <br /><br />
                                </div>
                                <div ng-show="isComplete && !isRegistered" style="height:400px;margin-left:2px">

                                    <div style="font-size:0.9em">
                                        <p style="padding: 20px;vertical-align: middle;line-height: 36px;text-align: left;margin-top: 130px;font-size: 24px;">I declare that I have gone through the terms and conditions given at the bottom of the Home page.</p>
                                    </div>
                                </div>
                                <div style="text-align:center">
                                    <input type="button" value="ACCEPT & SUBMIT" class="btn btn-info" ng-click="showSubmit=false;registration()" style="height:35px;width:50%;margin-bottom:2px;margin-top:5px" ng-show="isComplete && !isRegistered && showSubmit" />
                                    <div style="text-align:center;padding-bottom:25px;margin-top:10px" ng-show="isComplete && isRegistered">
                                        <h2 style="color:#0b8a8a">Registration Successful!!!</h2>
                                        <p ng-show="showEmail" style="text-align:center">Sending email <img src="~/Content/loader.gif" style="width:60px" /></p>
                                        <p ng-show="!showEmail" style="text-align:center">Email sent !!!</p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end welcome part -->
    <!-- join part -->
    <section class="login-part">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 text-center">
                    <h1>Bringing cryptocurrency to the real world</h1>
                    <p><a href='@Url.Action("Registration","Home")' class="btn btn-default">Join For Free</a></p>
                </div>
            </div>
        </div>
    </section>

    <!-- footer part -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-3 col-md-3">
                    <div class="foot-pnl">
                        <h3>POLICIES</h3>
                        <ul>
                            <li><a href='@Url.Action("TermsAndConditions","Home")'>Terms and Conditions</a></li>
                            <li><a href='@Url.Action("Compensation","Home")'>Compensation Plan</a></li>
                            <li><a href='@Url.Action("CookiePolicy","Home")'>Cookie Policy</a></li>
                            <li><a href='@Url.Action("PrivacyPolicy","Home")'>Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <form id="form7" name="form7" method="post" action="send-email/" enctype="multipart/form-data">
                        <div class="col-sm-6">
                            <input name="tbName" type="text" id="tbName" placeholder="Full Name" class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <input name="tbPhone" type="text" required="" pattern="[0-9]+" title="Only Number is Allowed.." id="tbPhone" placeholder="Phone No" class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <input name="tbEmail" type="email" id="tbEmail" placeholder="Email ID" class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <input type="text" placeholder="Subject" class="form-control">
                        </div>
                        <div class="col-sm-12">
                            <textarea cols="5" rows="3" type="text" name="tbMessage" id="tbMessage" class="form-control" placeholder="Message"></textarea>
                        </div>
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-2 col-sm-2 col-sm-offset-1 col-md-offset-1">
                    <div class="foot-pnl">
                        <h2>PAYMENT METHOD</h2>
                        <p><img src="~/SiteAssets/images/payment.png" alt="payment" class="img-responsive"></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- copyright part -->
    <section class="copyright">
        Copyright © 2017, All Rights Reserved By Amexbtc.
    </section>



</body>
</html>


